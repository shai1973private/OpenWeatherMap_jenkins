{
  "pipeline": {
    "name": "vienna-weather-cicd",
    "version": "1.0.0",
    "description": "CI/CD pipeline for Vienna Weather monitoring system",
    "environment": "development",
    "stages": [
      {
        "name": "clone",
        "description": "Clone and validate project structure",
        "timeout": 300,
        "required_files": [
          "weather_auto_rabbitmq.py",
          "docker-compose.yml",
          "setup-elk.ps1",
          "logstash/pipeline/logstash.conf"
        ]
      },
      {
        "name": "build",
        "description": "Setup environment and check dependencies",
        "timeout": 600,
        "dependencies": [
          "pika",
          "requests"
        ],
        "services": [
          "docker",
          "elasticsearch",
          "kibana",
          "logstash",
          "rabbitmq"
        ]
      },
      {
        "name": "unittest",
        "description": "Run unit tests and validations",
        "timeout": 300,
        "tests": [
          {
            "name": "configuration",
            "description": "Validate application configuration"
          },
          {
            "name": "api_connectivity",
            "description": "Test OpenWeatherMap API connectivity"
          },
          {
            "name": "data_format",
            "description": "Validate data format and structure"
          },
          {
            "name": "elasticsearch_connectivity",
            "description": "Test Elasticsearch connectivity"
          }
        ]
      },
      {
        "name": "deploy",
        "description": "Deploy application and services",
        "timeout": 900,
        "deployment_steps": [
          "start_elk_stack",
          "wait_for_services",
          "verify_deployment"
        ]
      }
    ],
    "notifications": {
      "elasticsearch": {
        "enabled": true,
        "url": "http://localhost:9200",
        "index_pattern": "vienna-pipeline-notifications-{yyyy.MM.dd}"
      },
      "kibana": {
        "enabled": true,
        "url": "http://localhost:5601",
        "dashboard_url": "http://localhost:5601/app/dashboards#/view/vienna-weather-friendly"
      }
    },
    "settings": {
      "max_retries": 3,
      "retry_delay": 30,
      "parallel_execution": false,
      "fail_fast": true,
      "cleanup_on_failure": false
    }
  },
  "application": {
    "name": "Vienna Weather Monitor",
    "version": "1.0.0",
    "api_key": "7ea63a60ef095d75baf077171165c148",
    "location": {
      "city": "Vienna",
      "country": "Austria",
      "coordinates": {
        "lat": 48.2085,
        "lon": 16.3721
      }
    },
    "update_frequency": "hourly",
    "data_retention": "30_days"
  },
  "infrastructure": {
    "elasticsearch": {
      "version": "8.11.0",
      "port": 9200,
      "index_pattern": "vienna-weather-{yyyy.MM.dd}"
    },
    "kibana": {
      "version": "8.11.0",
      "port": 5601,
      "dashboard_id": "vienna-weather-friendly"
    },
    "logstash": {
      "version": "8.11.0",
      "port": 5044,
      "config_path": "logstash/pipeline/logstash.conf"
    },
    "rabbitmq": {
      "version": "3-management",
      "port": 5672,
      "management_port": 15672,
      "queue_name": "weather_data"
    }
  }
}